{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "novelscraper-2",
	"version": "2.0.1",
	"identifier": "me.hanadigital.novelscraper",
	"build": {
		"beforeDevCommand": "pnpm dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "pnpm build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"title": "NovelScraper",
				"width": 800,
				"height": 600,
				"minWidth": 800,
				"minHeight": 600
			}
		],
		"security": {
			"csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost",
			"assetProtocol": {
				"enable": true,
				"scope": [
					"*/**"
				]
			}
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
